import { db } from '../firebase';
import { 
  collection, 
  addDoc, 
  getDocs, 
  query, 
  where,
  doc,
  updateDoc,
  Timestamp 
} from 'firebase/firestore';

// Add a menu item
export const addMenuItem = async (menuData) => {
  try {
    const docRef = await addDoc(collection(db, 'menus'), {
      ...menuData,
      timestamp: Timestamp.now()
    });
    return { success: true, id: docRef.id };
  } catch (error) {
    console.error("Error adding menu item:", error);
    return { success: false, error: error.message };
  }
};

// Get menu by date and meal type
export const getMenuByDate = async (date, mealType) => {
  try {
    const q = query(
      collection(db, 'menus'),
      where('date', '==', date),
      where('mealType', '==', mealType)
    );
    const querySnapshot = await getDocs(q);
    const menuItems = [];
    querySnapshot.forEach((doc) => {
      menuItems.push({ id: doc.id, ...doc.data() });
    });
    return menuItems;
  } catch (error) {
    console.error("Error getting menu:", error);
    return [];
  }
};

// Get today's menu
export const getTodaysMenu = async () => {
  const today = new Date().toISOString().split('T')[0]; // YYYY-MM-DD
  try {
    const q = query(collection(db, 'menus'), where('date', '==', today));
    const querySnapshot = await getDocs(q);
    const menuItems = [];
    querySnapshot.forEach((doc) => {
      menuItems.push({ id: doc.id, ...doc.data() });
    });
    return menuItems;
  } catch (error) {
    console.error("Error getting today's menu:", error);
    return [];
  }
};

// Update line status
export const updateLineStatus = async (status) => {
  try {
    await addDoc(collection(db, 'lineStatus'), {
      status, // "short", "medium", "long"
      timestamp: Timestamp.now()
    });
    return { success: true };
  } catch (error) {
    console.error("Error updating line status:", error);
    return { success: false, error: error.message };
  }
};

// Get current line status
export const getLineStatus = async () => {
  try {
    const querySnapshot = await getDocs(collection(db, 'lineStatus'));
    let latestStatus = null;
    let latestTime = null;
    
    querySnapshot.forEach((doc) => {
      const data = doc.data();
      if (!latestTime || data.timestamp > latestTime) {
        latestTime = data.timestamp;
        latestStatus = data.status;
      }
    });
    
    return latestStatus || "unknown";
  } catch (error) {
    console.error("Error getting line status:", error);
    return "unknown";
  }
};